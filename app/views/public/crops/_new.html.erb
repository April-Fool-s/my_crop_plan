<%= form_with model: crop do |f| %>

  <div class="row">
    <div class="col">
      <%= f.label :name, "作物名" %><span style="color: red;">*</span>
      <%= f.text_field :name, class: "form-control mb-3", placeholder: "トマト" %>

      <%= f.label :plant_family, "科名" %><span style="color: red;">*</span>
      <%= f.text_field :plant_family, placeholder: "ナス科", list: "plant_family-list" %>
      <datalist id="plant_family-list">
        <% PlantFamily.all.each do |pf| %>
          <option value="<%= pf.name %>">
        <% end %>
      </datalist>

      <%= f.label :rotation_year, "輪作年" %><span style="color: red;">*</span>
      <%= f.select :rotation_year,
         [['1年以上', '1年以上'], ['2年以上', '2年以上'], ['3年以上', '3年以上'], ['4年以上', '4年以上'], ['5年以上', '5年以上'], ['連作障害が起こりにくい', '連作障害が起こりにくい']],
         { include_blank: '輪作年を選択してください' } %>


      <%= f.label :companion, "コンパニオンプランツ" %>
      <%= f.text_area :companion, class: "form-control mb-3", placeholder: "ネギ、バジル、ニラ、落花生、 ビガンバナ科、マメ科、シソ科" %>

      <%= f.label :note, "メモ" %>
      <%= f.text_area :note, class: "form-control mb-3" %>
    </div>
  </div>

  <div class="row">
    <div class="col text-center my-3">
      <%= f.submit '登録', class: 'btn btn-form mx-auto px-4', style: "background-color: #99B264; color: #FFF;" %>
    </div>
  </div>
<% end %>