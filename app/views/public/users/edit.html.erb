<div class="container mx-auto">
  <div class="row">

    <div class="col-sm-12 col-md-10 col-lg-8 my-3 p-4 mx-auto">
      <h5 class="mb-3">アカウント設定</h5>
      <%= render "layouts/errors", object: @user %>
      <div class="row">
        <div class="col mx-2">

          <%= form_with model: @user do |f| %>

            <%= f.label :ユーザー名 %>
            <div class="mb-4">
              <%= f.text_field :name, class: "form-control", placeholder: "ユーザー名" %>
            </div>

            <%= f.label :メールアドレス %>
            <div class="mb-4">
              <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "メールアドレス" %>
            </div>

    　     　<div class="row justify-content-center"><%= f.submit "更新", class: "btn btn-warning m-4 btn-form" %></div>
            <div class="row justify-content-center"><%= link_to '退会のお手続き', '#closeAccountModal', data: { toggle: 'modal', dismiss: "modal" }, class: "btn btn-danger mx-4 btn-form" %></div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</div>

<!-- closeAccount Modal -->
<div class="modal fade" id="closeAccountModal" tabindex="-1" role="dialog" aria-labelledby="closeAccountModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="closeAccountModal">退会確認画面</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render "public/users/confirm" %>
      </div>
    </div>
  </div>
</div>