<header class="header" style="background-color: #99B264;">
  <nav class="navbar navbar-expand-lg navbar-dark">
    <div class="container">
      <a class="navbar-brand" href="/"><%= image_tag "MyCropPlan_logo.png" ,size: "190x63", class: "img-fluid" %></a>
        <ul class="navbar-nav ml-auto d-flex justify-content-end">

          <% if admin_signed_in? %>
          <li class="nav-item mx-3">
            <%= link_to destroy_admin_session_path, method: :delete, style: "display:flex; align-items: center; flex-direction: column;" do %>
              <i class="fa-solid fa-right-from-bracket fa-xl" style="color: #FFD43B;"></i>
              <p class="mt-3" style="color: #FFD43B; font-size: 10px;">ログアウト</p>
            <% end %>
          </li>

          <% elsif user_signed_in? %>
          <li class="nav-item mx-3">
            <%= link_to destroy_user_session_path, method: :delete, style: "display:flex; align-items: center; flex-direction: column;"  do %>
              <i class="fa-solid fa-right-from-bracket fa-xl" style="color: #FFD43B;"></i>
              <p class="mt-3" style="color: #FFD43B; font-size: 10px;">ログアウト</p>
            <% end %>
          </li>

          <% else %>
          <li class="nav-item mx-3">
            <%= link_to new_user_registration_path, style: "display:flex; align-items: center; flex-direction: column;" do %>
              <i class="fa-solid fa-user-plus fa-xl" style="color: #FFD43B;"></i>
              <p class="mt-3" style="color: #FFD43B; font-size: 10px;">新規登録</p>
            <% end %>
          </li>
          <li class="nav-item mx-3">
            <%= link_to user_session_path, style: "display:flex; align-items: center; flex-direction: column;" do %>
              <i class="fa-solid fa-right-to-bracket fa-xl" style="color: #FFD43B;"></i>
              <p class="mt-3" style="color: #FFD43B; font-size: 10px;">ログイン</p>
            <% end %>
          </li>
          <% end %>


        </ul>
      </div>
    </div>
  </nav>
</header>